<div class="offset2 accordion" id="<%= "markdown_examples_" + @inst_id.to_s %>">
  <%= t("global.markdown_heading") %><a class="accordion-toggle" data-toggle="collapse" data-parent="<%= "markdown_examples_" + @inst_id.to_s %>" href="#markdown<%= @inst_id.to_s %>">
  <%= t("global.markdown_examples") %>
  </a>
  <div id="markdown<%=  @inst_id.to_s %>" class="accordion-body collapse">
    <div class="accordion-inner">
      <div class="span6">
        <table class="table table-bordered table-condensed">
          <thead>
          <tr>
            <th>Before</th>
            <th>After</th>
          </tr>
          </thead>
          <tbody>
          <tr>
            <td>[Link](http://example.com/)</td>
            <td><%= markdown("[Link](http://example.com/)") %> </td>
          </tr>
          <tr>
            <td>*Italic*</td>
            <td><%= markdown("*Italic*") %> </td>
          </tr>
          <tr>
            <td>**Bold**</td>
            <td><%= markdown("**Bold**") %> </td>
          </tr>
          <tr>
            <td>
              # Heading 1 <br>
              ## Heading 2 <br>
              ### Heading 3 <br>

            </td>
            <td>
              <h1>Heading 1</h1>
              <h2>Heading 2</h2>
              <h3>Heading 3</h3>
            </td>
          </tr>
          <tr>
            <td>
              * Bullet Item <br>
              * Bullet Item <br>
            </td>
            <td>
              <ul>
                <li>Bullet Item</li>
                <li>Bullet Item</li>
              </ul>
            </td>
          </tr>
          <tr>
            <td>
              1. Numbered Item <br>
              2. Numbered Item <br>
            </td>
            <td>
              <ol>
                <li>Numbered Item</li>
                <li>Numbered Item</li>
              </ol>
            </td>
          </tr>
          <tr>
            <td>> Block Quote</td>
            <td><%= markdown("> Block Quote") %> </td>
          </tr>
          <tr>
            <td>`Inline code`</td>
            <td><%= markdown("`Inline code`") %> </td>
          </tr>
          </tbody>
        </table>
      </div>

    </div>
  </div>
</div>
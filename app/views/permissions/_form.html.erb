<%= simple_form_for(@permission) do |f| %>
  <%= f.error_notification %>

  <div class="inputs">
    <%= f.input :name %>
    <%= f.input :action, :collection => %W(read create update destroy administer manage) %>
    <%= f.input :subject_class, :collection => %W(Invoice Permission PriorityList Product Reply Role ServiceRate Setting Supplier User Users User_Session WorkOrder WorkOrders Employees Clients Profile) %>
    <%= f.input :subject_id %>
  </div>

  <div class="center">
    <%= f.button :submit %>
  </div>
<% end %>

<div id="sidebar_left">
  <%= module_header %>
  <div class="module">
    <ul>
      <% if can? :read, @products %><li class="delete"><%= link_to (t "global.delete"), @product, :confirm => 'Are you sure?', :method => :delete %></li> <% end %>
      <% if can? :edit, @products %><li class="edit"><%= link_to (t "global.edit"), edit_product_path %></li> <% end %>
      <li class="exit"><%= link_to (t "global.exit"), products_path %></li>
    </ul>
  </div>
<%= render 'layouts/left_sidebar_modules' %>
</div>
<div id="center_col" class="no_right_sidebar">
<div id="ddtabs1" class="basictab" >
<ul>
<li><a href="#<%= t "products.tab_menu_basic_name"  %>" rel="tab1"><%= (t "products.tab_menu_basic") %></a></li>
<li><a href="#<%= t "products.tab_menu_inventory_name" %>" rel="tab2"><%= t "products.tab_menu_inventory_name" %></a></li>
<li><a href="#<%= t "products.tab_menu_selling_name" %>" rel="tab3"><%= t "products.tab_menu_selling" %></a></li>
<li><a href="#<%= t "products.tab_menu_warranty_name"  %>" rel="tab4"><%= t "products.tab_menu_warranty" %></a></li>
</ul>
</div>

<div class="tabcontainer">

<div id="tab1" class="tabcontent">
  <table width="60%">
    <tr>
      <td >
        <strong><%= t "products.supplier" %>:</strong>
      </td>
      <td align="left">
        <%= @product.supplier.company_name %>
      </td>
    </tr>
    <tr>
      <td  >
        <strong><%= t "global.active" %></strong>
      </td>
      <td align="left">
        <%= @product.active? %>
      </td>
    </tr>
    <tr>
      <td >
        <strong><%= t "global.description" %>:</strong>
      </td>
      <td align="left">
        <%=  @product.description %>
      </td>
    </tr>
    <tr>
      <td >
        <strong><%= t "products.model" %>:</strong>
      </td>
      <td align="left">
        <%=  @product.model %>
      </td>
    </tr>
    <tr>
      <td  >
        <strong><%= t "products.cost" %>:</strong>
      </td>
      <td align="left">
        <%=  number_to_currency(@product.cost_price) %>
      </td>
    </tr>
    <tr>
      <td  >
        <strong><%= t "products.sell" %>:</strong>
      </td>
      <td align="left">
        <%=  number_to_currency(@product.sell_price) %>
      </td>
    </tr>
    <tr>
      <td  >
        <strong><%= t "products.sell" %>:</strong>
      </td>
      <td align="left">
        <%=  number_to_currency(@product.sell_price) %>
      </td>
    </tr>
    <tr>
  </table>
  <fieldset id="collapsable">
    <table>
      <tr>
        <td  >
          <h1><%= t "products.t_log" %></h1>
        </td>
      </tr>
      <tr>
        <td  >
          <strong><%= t "supplier.date_created" %>:</strong>
        </td>
        <td align="left">
          <%= time_ago_in_words(@product.created_at) %> <%= t "global.ago" %>
          (<%= localize @product.created_at, :format => :short %>) <%= t "global.by" %> <%= @product.created_by %>.
        </td>
      </tr>
      <tr>
        <td >
          <strong><%= t "global.last_updated_by" %>:</strong>
        </td>
        <td align="left">
          <% if @product.edited_at == nil %>
              <%= time_ago_in_words(@product.created_at) %> <%= t "global.ago" %>
              (<%= localize @product.created_at, :format => :short %>) <%= t "global.by" %> <%= @product.created_by %>.
          <% else %>
              <%= time_ago_in_words(@product.edited_at) %> <%= t "global.ago" %>
              (<%= localize @product.edited_at, :format => :short %>) <%= t "global.by" %> <%= @product.edited_by %>.
          <% end %>
        </td>
      </tr>
    </table>
  </fieldset>
</div>
<div id="tab2" class="tabcontent">

</div>
<div id="tab3" class="tabcontent">

</div>
<div id="tab4" class="tabcontent">

</div>
</div>
</div>

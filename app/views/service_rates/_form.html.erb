<div id="ddtabs1" class="basictab" >
  <ul>
  <li><a href="#<%= t "products.tab_menu_basic_name"  %>" rel="sc1"><%= (t "products.tab_menu_basic") %></a></li>
  </ul>
  </div>
  <div class="tabcontainer">
  <div id="sc1" class="tabcontent">
    <%= simple_form_for(@service_rate) do |f| %>
      <%= f.error_notification %>

      <div class="inputs">

        <%= f.input :sku %>

        <%= f.input :description %>

        <%= f.input :rate %>

        <%= f.input :taxable %>

        <% if @service_rate.tax_rate.present? %>
            <%= f.input :tax_rate %>
        <% else %>
           <%= f.input :tax_rate, :hint => t("products.hint_tax_rate") , :input_html => {:value => Setting::tax_rate} %>
        <% end %>

        <%= f.input :active %>

      </div>

      <div class="center">
        <%= f.button :submit %>
      </div>
    <% end %>
  </div>

  </div>
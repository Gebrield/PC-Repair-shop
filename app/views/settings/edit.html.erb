<div class="tabcontainer">

  <div id="sc1" class="tabcontent">
    <div class="simple_form">
    <%= form_tag({:action => 'edit'}) do %>
        <p><%= setting_text_field(:business_name, :size => 40)%></p>
        <p><%= setting_text_field(:business_slogan, :size => 80)%></p>
        <p><%= setting_text_field(:business_phone, :size => 20)%></p>
        <p><%= setting_text_field(:business_toll_free, :size => 20)%></p>
        <p><%= setting_text_field(:business_fax, :size => 20)%></p>
        <p><%= setting_text_field(:business_mobile, :size => 20)%></p>
        <p><%= setting_text_field(:business_email, :size => 50)%></p>
        <p><%= setting_text_area(:business_address, :cols => 10 , :rows => 5, :cols => 20 )%></p>
         <div class="center">
            <%= submit_tag t "global.confirm" %>
         </div>

    <% end %>
    </div>

  </div>

  <div id="sc2" class="tabcontent">
    <div class="simple_form">
        <%= form_tag({:action => 'edit'}) do %>
            <p><%= setting_text_field(:tax_type, :size => 10)%></p>
            <p><%= setting_text_field(:tax_rate, :size => 10)%></p>
             <div class="center">
                <%= submit_tag t "global.confirm" %>
             </div>

        <% end %>
        </div>

  </div>


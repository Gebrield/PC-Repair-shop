<!-- mytodo adjust layout the same as users-->
<div id="sidebar_left">
  <%= module_header %>
  <div class="module">
    <ul>
      <li class="delete">
        <% if can? :destroy, Supplier %>
            <%= link_to (t "global.delete"), @supplier, :confirm => 'Are you sure?', :method => :delete %>
        <% end %>
      </li>
      <li class="edit">
        <% if can? :edit, Supplier %>
            <%= link_to (t "global.edit"), edit_supplier_path %>
        <% end %>
      </li>
      <li class="exit"><%= link_to (t "global.exit"), suppliers_path %></li>
    </ul>
  </div>
</div>
<div id="center_col">
  <div class="content">
<table width="100%">
  <tr>
    <td colspan="2" align="right">
      <strong><%= t "supplier.company_name" %>:</strong>
    </td>
    <td align="left">
      <%= @supplier.company_name %>
    </td>
  </tr>
  <tr>
    <td colspan="2" align="right">
      <strong><%= t "supplier.website" %>:</strong>
    </td>
    <td align="left">
      <%= @supplier.website %>
    </td>
  </tr>
  <tr>
    <td colspan="2" align="right">
      <strong><%= t"supplier.active" %></strong>
    </td>
    <td align="left">
     <%= @supplier.active? %>
    </td>
  </tr>
  <tr>
    <td colspan="2" align="right">
      <strong><%= t "supplier.address" %>:</strong>
    </td>
    <td align="left">
      <textarea rows="6" cols="50" name="contact" readonly="readonly" ><%=h @supplier.address  %></textarea>
    </td>
  </tr>
  <tr>
    <td colspan="2" align="right">
      <strong><%= t "supplier.city" %>:</strong>
    </td>
    <td align="left">
     <%= @supplier.city %>
    </td>
  </tr>
 <tr>
    <td colspan="2" align="right">
      <strong><%= t "supplier.state" %>:</strong>
    </td>
    <td align="left">
     <%= @supplier.state %>
    </td>
  </tr>
  <tr>
    <td colspan="2" align="right">
      <strong><%= t "supplier.zip" %>:</strong>
    </td>
    <td align="left">
     <%= @supplier.zip %>
    </td>
  </tr>
  <tr>
    <td colspan="2" align="right">
      <strong><%= t "global.phone" %>:</strong>
    </td>
    <td align="left">
     <%= @supplier.phone %>
    </td>
  </tr>
  <tr>
    <td colspan="2" align="right">
      <strong><%= t "global.fax" %>:</strong>
    </td>
    <td align="left">
     <%= @supplier.fax %>
    </td>
  </tr>
  <tr>
    <td colspan="2" align="right">
      <strong><%= t "global.email" %>:</strong>
    </td>
    <td align="left">
     <%= link_to @supplier.email %>
    </td>
  </tr>
    <tr>
    <td colspan="2" align="right">
      <strong><%= t "supplier.contact_name" %>:</strong>
    </td>
    <td align="left">
     <%= @supplier.contact_name %>
    </td>
  </tr>
  <tr>
    <td colspan="2" align="right">
      <strong><%= t"supplier.contact_phone" %></strong>
    </td>
    <td align="left" >
     <%= @supplier.contact_phone %>
    </td>
  </tr>
  <tr>
    <td colspan="2" align="right">
      <strong><%= t "supplier.credit_terms" %>:</strong>
    </td>
    <td align="left">
     <%= @supplier.credit_terms %>
    </td>
  </tr>
  <tr>
    <td colspan="2" align="right">
      <strong><%= t "supplier.credit_amount" %>:</strong>
    </td>
    <td align="left">
     <%= number_to_currency( @supplier.credit_amount ) %>
    </td>
  </tr>
  <tr>
    <td colspan="2" align="right" >
     <strong><%= t "supplier.leadtime" %>:</strong>
    </td>
    <td>
     <%= @supplier.parts_leadtime_days %>
    </td>
  </tr>
  <tr>
    <td colspan="2" align="right">
      <strong><%= t "supplier.notes" %>:</strong>
    </td>
    <td align="left" >
     <textarea rows="6" cols="50" name="contact" readonly="readonly" ><%= @supplier.notes %></textarea>
    </td>
  </tr>
  </table>
  <fieldset id="collapsable">
  <table>
  <tr>
    <td colspan="2" align="right">
       <h1><%= t "supplier.t_log" %></h1>
    </td>
  </tr>

<tr>
    <td colspan="2" align="right">
      <strong><%= t"supplier.date_created" %>:</strong>
    </td>
    <td align="left">
      <%= time_ago_in_words(@supplier.created_at) %> <%= t "global.ago" %> (<%= localize @supplier.created_at, :format => :short  %>) <%= t "global.by" %> <%= @supplier.created_by %>.
    </td>
  </tr>
<tr>
    <td colspan="2" align="right">
      <strong><%= t "global.last_updated_by" %>:</strong>
    </td>
    <td align="left">
      <% if @supplier.edited_at == nil %>
          <%= time_ago_in_words(@supplier.created_at) %> <%= t "global.ago" %> (<%= localize @supplier.created_at, :format => :short %>) <%= t "global.by" %> <%= @supplier.created_by %>.
        <% else %>
          <%= time_ago_in_words(@supplier.edited_at) %> <%= t "global.ago" %> (<%= localize @supplier.edited_at, :format => :short %>) <%= t "global.by" %> <%= @supplier.edited_by %>.
        <% end %>
          </td>
  </tr>

</table>
    <br>
  </fieldset>
    </div>
    </div>
<table width="100%">
  <tr>
    <td colspan="4" align="right">
        <%= link_to(image_tag('edit.png',:title => [t "global.edit"]), edit_supplier_path) %><%= link_to 'Edit', edit_supplier_path(@supplier) %> | <%= link_to 'Back', suppliers_path %>
    </td>
  </tr>
  <tr>
    <td colspan="2" align="right">
      <strong>Company name:</strong>
    </td>
    <td align="left">
      <%=h @supplier.company_name %>
    </td>
  </tr>
  <tr>
    <td colspan="2" align="right">
      <strong><%= t"supplier.active" %></strong>
    </td>
    <td align="left">
     <%=h @supplier.active? %>
    </td>
  </tr>
  <tr>
    <td colspan="2" align="right">
      <strong>Address:</strong>
    </td>
    <td align="left">
      <textarea rows="6" cols="50" name="contact" readonly="readonly" ><%=h @supplier.address  %></textarea>
    </td>
  </tr>
  <tr>
    <td colspan="2" align="right">
      <strong>City:</strong>
    </td>
    <td align="left">
     <%=h @supplier.city %>
    </td>
  </tr>
 <tr>
    <td colspan="2" align="right">
      <strong>State:</strong>
    </td>
    <td align="left">
     <%=h @supplier.state %>
    </td>
  </tr>
  <tr>
    <td colspan="2" align="right">
      <strong>Zip/Postcode:</strong>
    </td>
    <td align="left">
     <%=h @supplier.zip %>
    </td>
  </tr>
  <tr>
    <td colspan="2" align="right">
      <strong>Phone:</strong>
    </td>
    <td align="left">
     <%=h @supplier.phone %>
    </td>
  </tr>
  <tr>
    <td colspan="2" align="right">
      <strong>Fax:</strong>
    </td>
    <td align="left">
     <%=h @supplier.fax %>
    </td>
  </tr>
  <tr>
    <td colspan="2" align="right">
      <strong>Email:</strong>
    </td>
    <td align="left">
     <%= auto_link_email_addresses( @supplier.email ) %>
    </td>
  </tr>
    <tr>
    <td colspan="2" align="right">
      <strong>Contact Name:</strong>
    </td>
    <td align="left">
     <%=h @supplier.contact_name %>
    </td>
  </tr>
  <tr>
    <td colspan="2" align="right">
      <strong><%= t"supplier.contact_phone" %></strong>
    </td>
    <td align="left" >
     <%=h @supplier.contact_phone %>
    </td>
  </tr>
  <tr>
    <td colspan="2" align="right">
      <strong>Credit Terms:</strong>
    </td>
    <td align="left">
     <%=h @supplier.credit_terms %>
    </td>
  </tr>
  <tr>
    <td colspan="2" align="right">
      <strong>Credit Amount:</strong>
    </td>
    <td align="left">
     <%=h number_to_currency( @supplier.credit_amount ) %>
    </td>
  </tr>
  <tr>
    <td colspan="2" align="right" >
     <strong>Parts leadtime days:</strong>
    </td>
    <td>
     <%=h @supplier.parts_leadtime_days %>
    </td>
  </tr>
  <tr>
    <td colspan="2" align="right">
      <strong><%= t "supplier.notes" %>:</strong>
    </td>
    <td align="left" >
     <textarea rows="6" cols="50" name="contact" readonly="readonly" ><%=h @supplier.notes  %></textarea>
    </td>
  </tr>
  <tr>
    <td colspan="2" align="right">
       <h1><%= t "supplier.t_log" %></h1>
    </td>
  </tr>

<tr>
    <td colspan="2" align="right">
      <strong><%= t"supplier.date_created" %>:</strong>
    </td>
    <td align="left">
      <%= time_ago_in_words(@supplier.created_at) %> <%= t "global.ago" %> (<%= localize @supplier.created_at, :format => :short %>) <%= t "global.by" %> <%= @supplier.created_by %>.
    </td>
  </tr>
<tr>
    <td colspan="2" align="right">
      <strong><%= t "global.last_updated_by" %>:</strong>
    </td>
    <td align="left">
      <% if @supplier.edited_at == nil %>
          <%= time_ago_in_words(@supplier.created_at) %> <%= t "global.ago" %> (<%= localize @supplier.created_at, :format => :short %>) <%= t "global.by" %> <%= @supplier.created_by %>.
        <% else %>
      <%= time_ago_in_words(@supplier.edited_at) %> <%= t "global.ago" %> (<%= localize @supplier.edited_at, :format => :short %>) <%= t "global.by" %> <%= @supplier.edited_by %>.
          <% end %>
          </td>
  </tr>
</table>
<table>
<tr>
    <td colspan="2" align="right">
      <strong><%= t "user.username" %>:</strong>
    </td>
    <td align="left">
     <%=h @user.username %>
    </td>
</tr>
<tr>
    <td colspan="2" align="right">
      <strong><%= t "global.email" %>:</strong>
    </td>

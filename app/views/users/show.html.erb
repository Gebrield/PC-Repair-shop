    </td>
</tr>
<tr>
    <td colspan="2" align="right">
      <strong><%= t "global.active" %>:</strong>
    </td>
    <td align="left">
     <%=h @user.active %>
    </td>
</tr>
<tr>
    <td colspan="2" align="right">
      <strong><%= t "global.address" %>:</strong>
    </td>
    <td align="left">
      <%=h @user.address %>
    </td>
  </tr>
  <tr>

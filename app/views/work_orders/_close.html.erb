<%= simple_form_for @work_order, :class => "form-horizontal" do |f| %>
    <%= f.input :closed, :input_html => {:checked => true} %>
    <%= markdown_hint %>
    <%= f.input :resolution, :input_html => {:rows => 7, :cols => 40} %>
    <div class="form-actions">
      <%= f.submit nil, :class => "btn btn-primary" %>
      <%= link_to t("global.cancel"), work_order_path, :class => "btn" %>
    </div>
<% end %>
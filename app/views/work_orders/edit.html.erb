<div id="sidebar_left">
  <%= module_header %>
  <div class="module">
    <ul>
      <li class="exit"><%= link_to([t "global.cancel"], work_orders_path) %></li>
      <li class="close"><%= link_to([t "global.close"], close_path, :confirm => (t "workorder.message_close_confirmation"), :method => :put) %></li>
    </ul>
  </div>
 </div>
<div id="center_col" class="no_right_sidebar">
  <div id="ddtabs1" class="basictab">
  <ul>
    <li><a href="#<%= t "workorder.tab_menu_basic_name" %>" rel="tab1"><%= (t "workorder.tab_menu_basic") %></a></li>
    <li><a href="#<%= t "workorder.tab_menu_resolution" %>" rel="tab2"><%= (t "workorder.tab_menu_resolution") %></a>
    </li>
  </ul>
</div>

<div class="tabcontainer">

  <div id="tab1" class="tabcontent">

    <%= simple_form_for(@work_order) do |f| %>
        <%= f.input :subject, :label => (t "workorder.subject") %>
        <% if current_user.workorder_assignability == true then %>
            <%= f.association :status, :label => (t "workorder.status"), :include_blank => false %>
            <%= f.association :priority_list, :label => (t "workorder.priority"), :include_blank => false %>
            <%= f.input :assigned_to_username, :as => :select, :collection => User.where("workorder_assignability = ?", true), :value_method => :name %>
        <% else %>
            <%= f.association :status, :label => (t "workorder.status"), :disabled => true, :include_blank => false %>
            <%= f.association :priority_list, :label => (t "workorder.priority"), :include_blank => false %>
            <%= f.input :assigned_to_username, :as => :select, :collection => User.where("workorder_assignability = ?", true), :value_method => :name, :disabled => true %>
        <% end %>

        <div class="simple_form input select optional">
          <label class="simple_form select optional"><%= t "workorder.details" %></label>

           <%= ckeditor_tag 'work_order[description]', @work_order.description, :class => 'ckeditor' %>

        </div>

        <%= f.input :updated_at, :as => :hidden, :input_html => {:value => Time.now} %>
        <%= f.input :edited_by, :as => :hidden, :input_html => {:value => current_user.username} %>
        <div class="clear"></div>
        <div class="center"><%= f.submit %></div>

    <% end %>
  </div>
  <div id="tab2" class="tabcontent">
    <%= simple_form_for(@work_order) do |f| %>
        <div class="simple_form label">
          <label><%= t "workorder.resolution" %></label>
        </div>
        <div class="span-670">
          <%= ckeditor_tag 'work_order[resolution]', @work_order.resolution, :class => 'ckeditor' %>
        </div>
        <div class="clear"></div>
        <div class="span-15">
        <%= f.input :closed, :as => :radio, :label => (t "workorder.closed"), :hint => (t "workorder.hint.re_open") %>
        </div>

        <%= f.input :updated_at, :as => :hidden, :input_html => {:value => Time.now} %>
        <div class="clear"></div>
        <div class="center"><%= f.submit %></div>
        <div class="clear"></div>
    <% end %>
  </div>
</div>
</div>


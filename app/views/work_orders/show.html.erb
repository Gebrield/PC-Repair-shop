<div id="sidebar_left">
  <%= module_header %>
  <div class="module">
    <ul>
       <% if can? :destroy, WorkOrder %>
            <li class="delete"><%= link_to (t "global.delete"), work_order_path, :confirm => 'Are you sure?', :method => :delete %> </li>
       <% end %>
       <% if can? :edit, WorkOrder %>
            <li class="edit"><%= link_to (t "global.edit"), edit_work_order_path %></li>
       <% end %>
      <li class="print"><%= link_to (t "global.print"), work_order_path(@work_order.id,:format => 'pdf') %></li>
      <li class="exit"><%= link_to (t "global.exit"), work_orders_path %></li>
    </ul>
</div>
  </div>
<div id="center_col" class="content no_right_sidebar">
  <table>
    <tr>
      <td class="tbl_labels" >
        <strong><%= t "workorder.subject" %>:</strong>
      </td>
      <td class="tbl_fields">
       <%= @work_order.subject %>
      </td>
  </tr>
  <tr>
      <td class="tbl_labels" >
        <strong><%= t "workorder.assigned_to" %>:</strong>
      </td>
    <td class="tbl_fields">
    <% if current_user.workorder_assignability == true  then %>
     <%= render(:partial => "work_orders/assign") %>
    <% else %>
     <% if @work_order.assigned_to_username.blank? then %>
              <%= t "workorder.not_assigned_message" %>
     <% else %>
     <%= @work_order.assigned_to_username %>
    <% end %>
    <% end %>
    </td>
  </tr>  
    <tr>
          <td class="tbl_labels" >
            <strong><%= t "workorder.priority" %>:</strong>
          </td>
          <td class="tbl_fields priority_<%=@work_order.priority_list.id %>">
           <%= @work_order.priority_list.name %>
          </td>
      </tr>
      <tr>
          <td class="tbl_labels" >
            <strong><%= t "workorder.status" %>:</strong>
          </td>
          <td class="tbl_fields">
           <%=h @work_order.status.name %>
          </td>
      </tr>
    <tr>
      <td align="right" valign="top">
        <strong><%= t "workorder.details" %>:</strong>
      </td>
      <td class="tbl_textarea">
        <%=raw @work_order.description %>
      </td>
  </tr>
  </table>
  <fieldset>
    <legend class="label"><label><%= t "global.activity_log" %></label></legend>
  <table >
    <tr>
      <td class="tbl_labels" >
        <strong><%= t "global.created_at" %>:</strong>
      </td>
      <td class="tbl_fields" >
        <%= time_ago_in_words(@work_order.created_at) %> <%= t "global.ago" %> (<%= localize @work_order.created_at, :format => :short  %>) <%= t "global.by" %> <%= @work_order.created_by %>.
      </td>
    </tr>
    <% if @work_order.updated_at == nil %>
        <% else %>
    <tr>
      <td class="tbl_labels">
        <strong><%= t "global.updated_at" %>:</strong>
      </td>
      <td class="tbl_fields" >
        <%= time_ago_in_words(@work_order.updated_at) %> <%= t "global.ago" %> (<%= localize @work_order.updated_at, :format => :short  %>) <%= t "global.by" %> <%= @work_order.edited_by %>.
      </td>
    </tr>
        <% end %>
  </table>
    <br>
  </fieldset>
</div>